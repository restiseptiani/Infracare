<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1321">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:descendantFocusability="beforeDescendants">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginTop="24dp"
                android:background="#0D1321">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tvJudul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tambah Laporan"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"/>
            </LinearLayout>

            <!-- Judul -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Laporan"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtJudul"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="Tambahkan laporan untuk postingan anda"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="16dp" />

            <!-- Bukti Laporan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bukti Laporan"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_border"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih RT/RW"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerRTRW"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edit_text_bg"
                android:paddingHorizontal="12dp"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="16dp"/>

            <!-- Lokasi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi Laporan"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtLokasi"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:hint="Lokasi"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:gravity="top"
                android:layout_marginBottom="16dp" />

            <!-- Deskripsi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Laporan"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="291dp"
                android:hint="Tambahkan deskripsi untuk laporan anda"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="20dp" />

            <!-- Tombol Konfirmasi -->
            <Button
                android:id="@+id/btnKonfirmasi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="@color/secondary"
                android:text="Konfirmasi"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                android:layout_marginBottom="64dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ProgressBar overlay di tengah layar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge" />

</FrameLayout>
